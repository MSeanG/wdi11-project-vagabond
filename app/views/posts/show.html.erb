<div class="post-show-container">
    <div class="post-show-content">
        <h1><%= @post.title %></h1>

        <p><%= @post.text %></p>
        <div>
            <% if current_user != nil %>
                <% if @post.user_id == current_user.id %>
                    <%= link_to "edit", edit_city_post_path %>
                <%end %>
            <%end%>
        </div>
    </div>
</div>
